<body>
<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>
  <%= link_to "Show", book_path(@book) %>
  <a href="/books">Back</a>
<% end %>

<% if @book.errors.any? %>
   <div id="error_explanation" class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
   </div>
<% end %>
</body>