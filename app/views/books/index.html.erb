<body>
 <% if flash[:notice] %>
		<p><%= flash[:notice] %></p>
 <% end %>
 <h1>Books</h1>
 <table>
	 <thead>
		 <tr>
			 <th>Title</th>
			 <th>Body</th>
			 <th colspan="3"></th>
		 </tr>
	 </thead>
	 <tbody>
	   <% @books.each do |book| %>
		 <tr>
			 <td><%= book.title %></td>
			 <td><%= book.body %></td>
			 <th><%= link_to "Show", book_path(book.id) %></th>
			 <th><%= link_to "Edit", edit_book_path(book.id) %></th>
			 <th><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></th>
		 </tr>
	   <% end %>
	 </tbody>
 </table>

  <h2>New book</h2>
  <%= form_for(@book) do |f| %>

	  <h4>Title</h4>
	  <%= f.text_field :title %>

	  <h4>Body</h4>
	  <%= f.text_area :body %>

	  <%= f.submit 'Create Book' %>

  <% end %>

  <% if @book.errors.any? %>
   <div id="error_explanation" class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
   </div>
  <% end %>
</body>